<div class="col-lg-4">
  <div class="single-destinations">
    <div class="thumb">
      <%= image_tag location.pictures[0].url if
      location.pictures.length > 0 %>
    </div>
    <div class="details">
      <h4 class="d-flex justify-content-between">
        <span><%= location.name %></span>
        <span><%= location.total_rate %></span>
      </h4>
      <p>
        <%= t ".view_on_map" %>  |   <%= location.reviews.count %> <%= t ".reviews" %>
      </p>
      <% if params %>
        <%= link_to t(".view"), location_path(location, params.permit(q: {})), class: "price-btn" %>
      <% else %>
        <%= link_to t(".view"), location_path(location), class: "price-btn" %>
      <% end %>
    </div>
  </div>
</div>
