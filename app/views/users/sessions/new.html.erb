<section class="sample-text-area">
  <div class="container">
    <div class="row fullscreen align-items-center justify-content-center">
      <div class="col-md-6 banner-right card shadow-lg">
        <%= form_for resource, as: resource_name, url: session_path(resource_name), html: {class: "form-wrap"}  do |f| %>
          <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
          <%= link_to "Forgot Password?", password_path(resource) %>
          <div>
            <%= f.label :remember_me, class: "checkbox" do %>
              <%= f.check_box :remember_me %>
              <span><%= t "remember me" %></span>
            <% end %>
          </div>
          <%= f.button "Log in", class: "primary-btn text-uppercase" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
