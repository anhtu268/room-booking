<section class="sample-text-area">
  <div class="container">
    <div class="row fullscreen align-items-center justify-content-center">
      <div class="col-md-6 banner-right card shadow-lg">
        <%= form_for resource, as: resource_name, url: password_path(resource_name), html: {class: "form-wrap"}  do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
          <%= f.button "Confirm", class: "primary-btn text-uppercase" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
